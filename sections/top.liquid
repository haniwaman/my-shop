<div id="top-slider" class="swiper-container">
	<div class="swiper-wrapper">
	{% for block in section.blocks %}
		<div class="swiper-slide"><img src="{{ block.settings.image | img_url: 'master' }}" alt="" /></div>
	{% endfor %}
	</div><!-- /swiper-wrapper -->
	<div class="swiper-button-prev"></div>
	<div class="swiper-button-next"></div>
</div><!-- /swiper-container -->
{% schema %}
	{
		"name": "トップスライダー",
		"max_blocks": 5,
		"blocks": [
			{
				"type": "slide",
				"name": "Slide",
				"limit": 4,
				"settings": [
					{
						"id": "image",
						"type": "image_picker",
						"label": "Image"
					}
				]
			}
		]
	}
{% endschema %}
