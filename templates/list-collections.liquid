<div class="l-list-collections">
	<div class="l-container">

<div class="l-content">
	<div class="l-primary">
	{% for collection in collections %}
		{% unless collection.handle == 'frontpage' %}
			{% capture collection_title %}{{ collection.title | escape }}{% endcapture %}
			<a href="{{ collection.url }}">More {{ collection_title }} &rsaquo;</a>
			{% for product in collection.products limit:3 %}
			{% assign grid_item_width = 'large--one-fifth medium--one-half' %}
			<div class="p-archive">
				<div class="p-archive__title c-title">{{ collection_title }}</div><!-- /.p-archive__title -->
				<div class="p-archive__items">
				{% for product in collection.products %}
					<a href="{{ product.url | within: collection }}" class="p-archive__item c-product-item">
						<figure class="c-product-item__image">
							<img src="{{ product.featured_image.src | img_url: 'large' }}" alt="{{ product.featured_image.alt | escape }}">
						</figure><!-- /.p-product-item__image -->
						<div class="c-product-item__body">
							<div class="c-product-item__title">{{ product.title }}</div>
							<div class="c-product-item__price">{{ product.price | money }}</div>
							{% unless product.available %}
							<div class="c-product-item__sold-out">売り切れ</div>
							{% endunless %}
						</div><!-- /.c-product-item__body -->
					</a><!-- /.p-archive__item -->
					{% endfor %}
				</div><!-- /.p-archive__items -->
				{% endpaginate %}
			</div><!-- /.p-archive -->
			{% endfor %}
		{% endunless %}
	{% endfor %}

	</div><!-- /.l-primary -->
	<div class="l-secondary">
		{% section "sidebar" %}
	</div><!-- /.l-secondary -->
</div><!-- /.l-content -->

</div><!-- /l-container -->
</section><!-- /l-list-collections -->
