{% paginate collection.products by 3 %}
<div class="p-archive__items">
{% for product in collection.products %}
	<a href="{{ product.url | within: collection }}" class="p-archive__item c-product-item">
		<figure class="c-product-item__image">
			<img src="{{ product.featured_image.src | img_url: 'large' }}" alt="">
		</figure><!-- /.p-product-item__image -->
		<div class="c-product-item__body">
			<div class="c-product-item__title">{{ product.title }}</div>
			<div class="c-product-item__price">{{ product.price | money }}</div>
			{% unless product.available %}
			<div class="c-product-item__sold-out">売り切れ</div>
			{% endunless %}
		</div><!-- /.c-product-item__body -->
	</a><!-- /.p-archive__item -->
	{% endfor %}
</div><!-- /.p-archive__items -->
{% if paginate.pages > 1 %}
<div class="p-pagenation">
	{{ paginate | default_pagination }}
</div>
{% endif %}
{% endpaginate %}
